<div class="container">
  <div class="container-title"><h1>SwimPlan</h1>
  <p>Get your daily swim training</p>
  </div>

  <div class="cards">
  <% @trainings.each do |training| %>
    <div class= "card">
    <%= link_to training_path(training) do  %>
      <div class="card-title">
      <h4><%= training.title %></h4>
      <h6><%= training.date %></h6>
      </div>
      <% end %>
      <% training.blocs.each do |bloc| %>
        <div class="bloc">
          <div class="bloc-quantity">
            <%= bloc.quantity %>x
          </div>

          <div class="lines">
            <% bloc.lines.each do |line| %>
              <div class="line">
              <div class = "line-left">
                <%= line.quantity %>x
                <%= line.distance %>
                <%= line.exercise %>
                </div>
                <div class = "line-right">
                <% if line.start_time? %>
                Start:
                <%= line.start_time %>
                <% end %>
                </div>
                </div>
            <% end %>
          </div>

        </div>
      <% end %>
      <div class="edit-link">
      <%= link_to "Edit this training", edit_training_path(training) %> <br>
       <%= link_to "Delete", training_path(training), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      </div>

      <div class="star btn" data-controller="favorite" data-action="click->favorite#toggle" >
        <% if @favorites.include? training %>
          <i class="fa-solid fa-star fa-2xl yellow-star" data-favorite-target="star"></i>A
        <% else %>
          <i class="fa-regular fa-star fa-2xl"></i>B
        <% end %>
      </div>

    </div>

  <% end %>
  </div>

  <div class="container-footer">
  <br>
  <%= link_to "New training", new_training_path %>
  <br>
  </div>

</div>
<div class="footer">
  <%= link_to "About us", about_path %>
  </div>
