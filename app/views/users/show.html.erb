<%# <%= turbo_frame_tag "name" do %>
<body class="profile-container">
<div class="user-container">
<div class="user-info">
<h4>Username</h4>
<%= @user.username %>
<br>
<br>

<%= simple_form_for @user, url: user_path(@user), method: :patch, html: { class: 'user-form' } do |form| %>
  <div class="right-save">
  <%= form.input :username, label:" Modify Username" %>
  <%= form.button :submit, 'Update', class: 'custom-save-button'%>
  </div>
<% end %>


<h4>Picture</h4>

<% if @user.photo.attached? %>
  <%= image_tag @user.photo %>
<% else %>
  <i class="fa-solid fa-user fa-2xl"></i>
<% end %>
<br>
<br>
<h6></h6>
<%= simple_form_for @user, url: user_path(@user), method: :patch, html: { multipart: true, class: 'user-form' } do |form| %>
  <div class="right-save">
  <%= form.input :photo, as: :file, label: "Modify Picture" %>
  <%= form.button :submit, 'Update' ,class: 'custom-save-button'%>
  </div>
<% end %>
</div>

<div class="training-info">
<h4>Number of Trainings:</h4>

<h4>Number of Favorite Trainings: </h4>

<br>

<p>MAP</p>

</div>

</div>
</body>
