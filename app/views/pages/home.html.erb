<div class="container">
  <h1>SwimPlanAA</h1>
  <p>Get your daily swim training</p>

  <div class="cards">
  <% @trainings.each do |training| %>
    <div class= "card">
      <%= link_to training_path(training) do  %>
        <div class="card-title">
          <h3><%= training.title %></h3>
        </div>
      <% end %>
      <% training.blocs.each do |bloc| %>
        <div class="bloc">
          <div class="bloc-quantity">
            <%= bloc.quantity %>
          </div>

          <div class="lines">
            <% bloc.lines.each do |line| %>
              <div class= "line">
                <div>
                  <%= line.quantity %> <br>
                  <%= line.distance %>
                  <%= line.exercise %>

                </div>
                <div>
                <%= line.start_time %>
                </div>
                </div>
               <br>
            <% end %>
          </div>

        </div>
      <% end %>
       <%= link_to "Edit Training", edit_training_path(training) %>
       <%= link_to "Delete", training_path(training), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </div>
  </div>
  <% end %>
<br>
  <%= link_to "New training", new_training_path %>
  <br>
  <%= link_to "about us", about_path %>

</div>
